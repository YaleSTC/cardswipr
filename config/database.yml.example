default: &default
  adapter: mysql2
  host: <%= ENV.fetch('DATABASE_HOST') %>
  socket: /tmp/mysql.sock
  username: <%= ENV.fetch('MYSQL_USER') %>
  password: <%= ENV.fetch('MYSQL_PASSWORD') %>
  encoding: utf8
  reconnect: false
  pool: 5

local:
  <<: *default
  database: cardswipr_local

test:
  <<: *default
  database: cardswipr_test
