<!DOCTYPE html>
<html>
  <head>
    <!-- DataDog scripts -->
    <script
      src="https://www.datadoghq-browser-agent.com/datadog-rum-us.js"
      type="text/javascript">
    </script>
    <script>
      window.DD_RUM && window.DD_RUM.init({
        clientToken: ENV.fetch('DD_CLIENT_TOKEN') ,
        applicationId: ENV.fetch('DD_APP_ID'),
      });
    </script>

    <title>CardSwipr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= render 'nav' %>
  </head>

  <body>
    <div class="container p-1">
      <%= render 'flashes' %>
    </div>
    <%= yield %>
  </body>

  <%= render 'footer' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'magstripe-code', 'data-turbolinks-track': 'reload' %>

  <% if ENV['MALLORY_URL'].present? %>
    <link href='<%= ENV['MALLORY_URL'] %>' rel='stylesheet'>
  <% end %>
</html>
