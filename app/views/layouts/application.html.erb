<!DOCTYPE html>
<html>
  <head>
    <title>CardSwipr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= render 'nav' %>
  </head>

  <body>
    <div class="container p-1">
      <%= render 'flashes' %>
    </div>
    <%= yield %>
  </body>

  <%= render 'footer' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'magstripe-code', 'data-turbolinks-track': 'reload' %>

  <% if ENV['MALLORY_URL'].present? %>
    <link href='<%= ENV['MALLORY_URL'] %>' rel='stylesheet'>
  <% end %>
</html>
