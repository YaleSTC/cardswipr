<!DOCTYPE html>
<html>
  <head>
    <!-- DataDog scripts -->
    <script
      src="https://www.datadoghq-browser-agent.com/datadog-rum-us.js"
      type="text/javascript">
    </script>
    <script>
      window.DD_RUM && window.DD_RUM.init({
        clientToken: 'pub17211959b0672d5e8a58cd4423c011f6',
        applicationId: 'e1f83e68-a397-40a8-b3d0-b1fd9972bf5a',
      });
    </script>

    <title>CardSwipr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= render 'nav' %>
  </head>

  <body>
    <div class="container p-1">
      <%= render 'flashes' %>
    </div>
    <%= yield %>
  </body>

  <%= render 'footer' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'magstripe-code', 'data-turbolinks-track': 'reload' %>

  <% if ENV['MALLORY_URL'].present? %>
    <link href='<%= ENV['MALLORY_URL'] %>' rel='stylesheet'>
  <% end %>
</html>
