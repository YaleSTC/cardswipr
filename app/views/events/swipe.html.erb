  <h1 class="text-center"><%= @event.title %></h1>
  <br>
  <br>
  <h4 class="text-center"><%= @event.description %></h4>
  <br>
  <div class="container text-center">
    <%= form_tag event_lookup_path(@event), class: "input-lg" do %>
      <div class="spacedout">
        <strong class="spacedout">Card Swipe</strong> or <strong class="spacedout">NetID</strong> or <strong class="spacedout">Yale Email</strong><br>
      </div>
      <%= text_field_tag(:query, nil, :autocomplete => 'off') %>
    <% end %>
    <br>
  </div>
  <p class="pull-right">
    <span class="badge"><%= @count%></span> recorded.
  </p><br>