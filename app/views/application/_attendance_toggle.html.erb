<div class="container">
  <div class="text-center">
    <h1>Attendance Info: <%= event.title %></h1>
  </div>
  <div class="col-md-12 text-center">
    <div class="btn-group">
      <% if attendance_active %>
        <%= button_to 'Attendances', event_attendances_path(event.id), method: :get, :class => 'toggle-left btn btn-dark', disabled: true %>
        <%= button_to 'Preregistrations', event_preregistrations_path(event.id), method: :get, :class => 'toggle-right btn btn-light' %>
      <% else %>
        <%= button_to 'Attendances', event_attendances_path(event.id), method: :get, :class => 'toggle-left btn btn-light' %>
        <%= button_to 'Preregistrations', event_preregistrations_path(event.id), method: :get, :class => 'toggle-right btn btn-dark', disabled: true %>
      <% end %>
    </div>
  </div>
</div>

<style>
  .toggle-left {
    border-radius: 30px 0 0 30px;
    width:37em;
  }

  .toggle-right {
    border-radius:  0 30px 30px 0;
    width:37em;
  }
</style>
